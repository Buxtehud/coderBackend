<div>
    <h1>Vista de Productos</h1>
    <br>

    {{#if prodAmount}}
        <div>
            <table>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Foto</th>
                </tr>
                {{#each product}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>${{this.price}}</td>
                        <td><img width="50" src={{this.thumbnail}} alt="not found"></td>
                    </tr>
                {{/each}}
            </table>
        </div>
    {{else}}
        <h3>No se encontraron productos</h3>
    {{/if}}
</div>